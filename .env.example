# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/diet_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# API
PORT=3001
NODE_ENV="development"
API_PREFIX="/api/v1"

# Redis (for caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="info"

# Monitoring
PROMETHEUS_PORT=9090
