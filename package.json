{
    "name": "diet-app",
    "private": true,
    "version": "0.1.0",
    "description": "Diet Management System monorepo (NestJS + Next.js + React Native + PostgreSQL) with Clean Architecture",
    "scripts": {
        "build": "pnpm -r run build",
        "dev:web": "pnpm --filter @diet/web dev",
        "dev:api": "pnpm --filter @diet/api start:dev",
        "dev:mobile": "pnpm --filter @diet/mobile start",
        "lint": "pnpm -r run lint",
        "test": "pnpm -r run test",
        "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
        "prisma:seed": "ts-node prisma/seed.ts"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^11.1.9",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.9",
        "@nestjs/cqrs": "^11.0.3",
        "@nestjs/jwt": "^11.0.2",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.9",
        "@nestjs/swagger": "^11.2.3",
        "@nestjs/testing": "^11.1.9",
        "@nestjs/throttler": "^6.5.0",
        "@prisma/client": "^7.1.0",
        "@tanstack/react-query": "^5.90.12",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "cache-manager": "^7.2.5",
        "cache-manager-redis-store": "^3.0.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "supertest": "^7.1.4",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^13.0.0",
        "xss": "^1.0.15"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.11.15",
        "@types/uuid": "^11.0.0",
        "jest": "^30.2.0",
        "prisma": "^7.1.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3"
    }
}