{
    "name": "diet-app",
    "private": true,
    "version": "0.1.0",
    "description": "Diet Management System monorepo (NestJS + Next.js + React Native + PostgreSQL) with Clean Architecture",
    "scripts": {
        "build": "pnpm -r run build",
        "dev:web": "pnpm --filter @diet/web dev",
        "dev:api": "pnpm --filter @diet/api start:dev",
        "dev:mobile": "pnpm --filter @diet/mobile start",
        "lint": "pnpm -r run lint",
        "test": "pnpm -r run test",
        "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
        "prisma:seed": "ts-node prisma/seed.ts"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@nestjs/config": "^4.0.2",
        "@nestjs/cqrs": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/swagger": "^11.2.3",
        "@prisma/client": "^7.1.0",
        "@tanstack/react-query": "^5.90.12",
        "axios": "^1.13.2",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "jsonwebtoken": "^9.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/node": "^20.11.15",
        "prisma": "^7.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    }
}