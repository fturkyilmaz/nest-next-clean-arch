generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  clients   Client[]
}

model Client {
  id           String    @id @default(cuid())
  name         String
  dietitianId  String
  dietitian    User      @relation(fields: [dietitianId], references: [id])
  dietPlans    DietPlan[]
}

model DietPlan {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  dietitianId String
  dietitian   User     @relation(fields: [dietitianId], references: [id])
  meals       Meal[]
  createdAt   DateTime @default(now())
}

model Meal {
  id          String   @id @default(cuid())
  dietPlanId  String
  dietPlan    DietPlan @relation(fields: [dietPlanId], references: [id])
  name        String
  calories    Int
  timeOfDay   String
}

enum Role {
  admin
  dietitian
  client
}
